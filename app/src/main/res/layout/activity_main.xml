<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feriados 2024"
        android:textSize="@dimen/text_title"
        android:layout_marginTop="@dimen/m_xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTitleLogin"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvTitleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="@dimen/m_sm"
        android:textSize="@dimen/text_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/etUser"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <EditText
        android:id="@+id/etUser"
        android:layout_width="@dimen/input"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_sm"
        android:textSize="@dimen/text_normal"
        android:hint="Usuario"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitleLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="@dimen/input"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="@dimen/m_sm"
        android:inputType="textPassword"
        android:textSize="@dimen/text_normal"
        android:textAlignment="center"
        android:hint="ContraseÃ±a"
        app:layout_constraintTop_toBottomOf="@id/etUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_lg"
        android:text="Ingresar"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPass" />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrate"
        android:textSize="@dimen/text_normal"
        android:layout_marginTop="@dimen/m_sm"
        app:layout_constraintTop_toBottomOf="@id/btSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>